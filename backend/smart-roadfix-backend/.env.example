# Smart RoadFix Backend Environment Variables
# Copy this file to .env and fill in the values

# ========================
# Application Settings
# ========================
APP_NAME=Smart RoadFix API
APP_VERSION=1.0.0
DEBUG=false

# ========================
# Server Settings
# ========================
HOST=0.0.0.0
PORT=8000

# ========================
# MongoDB Settings
# ========================
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=smart_roadfix

# ========================
# Auth0 Settings
# ========================
# Your Auth0 domain (e.g., your-tenant.auth0.com)
AUTH0_DOMAIN=
# Your Auth0 audience (API identifier)
AUTH0_AUDIENCE=
# Algorithm for JWT verification (RS256)
AUTH0_ALGORITHMS=RS256

# ========================
# Open311 API Settings
# ========================
# Open311 API base URL
OPEN311_BASE_URL=https://api.open311.org
# Optional: Open311 API key (if required)
OPEN311_API_KEY=
# Default service code for potholes
OPEN311_SERVICE_CODE=POTHOLE

# ========================
# CORS Settings
# ========================
# Comma-separated list of allowed origins
CORS_ORIGINS=*

# ========================
# Logging Settings
# ========================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
